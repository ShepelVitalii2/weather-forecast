<!--блок контроля-->




<div class="weather-block">
    <!--Погода на 1 день-->
    <div class="card">

        <div class="weather">

            <h2 class="city">{{currentWeatherInfo.location.name}}, {{currentWeatherInfo.location.country}}</h2>
            <h4 class="date"></h4>
            <div class="temperature-block">
                <h1 class="temperature">{{currentWeatherInfo.forecast.forecastday.0.day.avgtemp_c}}c°</h1>
                <img src="{{currentWeatherInfo.forecast.forecastday.0.day.condition.icon}}" alt="weather picture"
                    class="icon" />
            </div>
            {{!-- <div class="summary">Its {{forecast.forecastday.0.day.condition.text}} today</div> --}}
            <div id="temperature">
                <div class="apparent-temperature" id='temp'>Apparent temperature is:
                    {{currentWeatherInfo.forecast.forecastday.0.day.avgtemp_c}} C°</div>
            </div>

            <div class="wind">Wind speed: {{currentWeatherInfo.forecast.forecastday.0.day.maxwind_kph}}</div>
            <div class="humidity">Humidity: {{currentWeatherInfo.forecast.forecastday.0.day.avghumidity}} %</div>
            <div class="js-card-container"></div>

        </div>
        <div class="sub-weather">
            <h4 class="add-info">Additional information:</h4>
            <p class="add-info">Chance of rain : {{currentWeatherInfo.forecast.forecastday.0.day.daily_chance_of_rain}}
                %</p>
            <p class="add-info">Chance of snow : {{currentWeatherInfo.forecast.forecastday.0.day.daily_chance_of_snow}}
                %</p>
            <p class="add-info">Sunrise at : {{currentWeatherInfo.forecast.forecastday.0.astro.sunrise}}</p>
            <p class="add-info">Sunset at : {{currentWeatherInfo.forecast.forecastday.0.astro.sunset}}</p>
            <div class="love">
                <p class="add-info">
                </p>
            </div>

        </div>
    </div>

    <!--Погода на 3 дня-->
    <div class="card">

        <div class="weather">

            <h2 class="city">Weather for tomorrow</h2>

            <div class="temperature-block">
                <h1 class="temperature">{{queryResultWather.forecast.forecastday.1.day.avgtemp_c}}c°</h1>
                <img src="{{queryResultWather.forecast.forecastday.1.day.condition.icon}}" alt="weather picture"
                    class="icon" />
            </div>
            {{!-- <div class="summary">Its a {{forecast.forecastday.0.day.condition.text}} tommorow</div> --}}
            <div class="apparent-temperature">Apparent temperature is:
                {{queryResultWather.forecast.forecastday.1.day.avgtemp_c}} C°</div>
            <div class="wind">max wind speed: {{queryResultWather.forecast.forecastday.1.day.maxwind_kph}} km</div>
            <div class="humidity">Humidity: {{queryResultWather.forecast.forecastday.1.day.avghumidity}} %</div>
            <div class="js-card-container"></div>

        </div>


        <div class="weather">

            <h2 class="city">Weather for the day after tommorow</h2>

            <div class="temperature-block">
                <h1 class="temperature">{{queryResultWather.forecast.forecastday.2.day.avgtemp_c}}c°</h1>
                <img src="{{queryResultWather.forecast.forecastday.2.day.condition.icon}}" alt="weather picture"
                    class="icon" />
            </div>
            <div class="summary">Will be {{queryResultWather.forecast.forecastday.2.day.condition.text}} after tommorow
            </div>
            <div class="apparent-temperature">Apparent temperature is:
                {{queryResultWather.forecast.forecastday.2.day.avgtemp_c}} C°</div>
            <div class="wind">Max wind speed: {{queryResultWather.forecast.forecastday.2.day.maxwind_kph}} km</div>
            <div class="humidity">Humidity: {{queryResultWather.forecast.forecastday.2.day.avghumidity}} %</div>
            <div class="js-card-container"></div>

        </div>
    </div>
    <div class="card">

        <div id="map"></div>
    </div>
</div>